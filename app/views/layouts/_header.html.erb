<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <%= link_to image_tag("framgia-logo-black-1.png",
      class: "img-responsive"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li><%= link_to t("header.home"), root_path %></li>
          <li><%= link_to t("header.category"), categories_path %></li>
          <li><%= link_to t("header.users"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.email %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.edit_user"),
                edit_user_registration_path %></li>
              <li><%= link_to t("header.logout"),
                destroy_user_session_path, method: :delete,
                data: {confirm: t("notification.logout")} %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.login"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
